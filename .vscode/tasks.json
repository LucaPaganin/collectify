{
    "version": "2.0.0",
    "tasks": [
        // Task to initialize all database tables using the Python script in the virtual environment
        {
            "label": "Init Collectify DB Tables",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/backend/.venv/bin/python",
            },
            "windows": {
                "command": "${workspaceFolder}/backend/.venv/Scripts/python.exe",
            },
            "args": [
                "${workspaceFolder}/backend/init_all_tables.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
