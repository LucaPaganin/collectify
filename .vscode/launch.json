{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Flask + Chrome",
            "configurations": ["BE: Flask", "Chrome"],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "BE: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "preLaunchTask": "Init Collectify DB Tables",
            "args": [
                "run",
                // "--no-debugger",
                // "--no-reload"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/backend",
            "justMyCode": false,
        },
        {
            "name": "Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}